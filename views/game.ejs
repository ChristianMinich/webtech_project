<html>
  <head>
    <link rel="stylesheet" href="./css/style.css" />
  </head>
  <body>
    <h1><%= roomID%></h1>
    <div id="video-container" class="video-container">
      <video id="my-video" width="1020" height="815" autoplay muted>
        <source src="./assets/mario-start.mp4" type="video/mp4" />
      </video>
    </div>

    <div class="quiz_box">
      <header>
        <div class="title">Das Quizduell von Liefergruppe</div>
        <div class="timer">
          <div class="time_left_txt">Time Left</div>
          <div class="timer_sec">15</div>
        </div>
        <div class="time_line"></div>
      </header>
      <section>
        <div class="que_text">
          <!-- Here I've inserted question from JavaScript -->
        </div>
        <div class="option_list">
          <!-- Here I've inserted options from JavaScript -->
        </div>
      </section>

      <footer>
        <div class="total_que"></div>
        <button class="next_btn">Next</button>
      </footer>
    </div>
    <div class="result_box">
      <div class="icon">
        <i class="fas fa-crown"></i>
      </div>
      <div class="complete_text">You've completed are Quiz!</div>
      <div class="score_text">// Score Result from JavaScript --></div>
      <div class="buttons">
        <button class="restart">Replay Quiz</button>
        <button class="quit">Quit Quiz</button>
      </div>
    </div>
    <script src="./js/questions.js"></script>
    <style>
      .video-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
      }
    </style>
    <script>
      var video = document.getElementById("my-video");
      var videoContainer = document.getElementById("video-container");
      var quizBox = document.getElementById("quiz-box");

      video.addEventListener("ended", function () {
        videoContainer.remove();
        start();
      });
    </script>
    <script src="./js/script-test.js"></script>
  </body>
</html>
