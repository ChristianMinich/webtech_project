<!DOCTYPE html>
<html>
<head>
  <title>User Highscores</title>
  <style>
    body {
      font-family: 'Montserrat', sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f2f2f2;
    }

    h1 {
      text-align: center;
      margin-top: 20px;
    }

    table {
      margin: 0 auto;
      width: 80%;
      border-collapse: collapse;
      border: 1px solid #ddd;
      background-color: #fff;
    }

    thead {
      background-color: #f9f9f9;
    }

    th, td {
      padding: 10px;
      text-align: left;
    }

    th {
      font-weight: bold;
    }

    tr:nth-child(even) {
      background-color: #f2f2f2;
    }

    .avatar-cell {
      text-align: center;
    }

    .avatar-container {
      position: relative;
      display: inline-block;
    }

    .avatar-image {
      width: 50px;
      height: 50px;
      border-radius: 50%;
    }

    .rank-image {
      position: absolute;
      bottom: -5px;
      right: -20px;
      width: 90px;
      height: 74px;
    }



  </style>
</head>
<body>
  <% include('navbar') %>
  <h1>User Highscores</h1>
  <table>
    <thead>
      <tr>
        <th>Avatar</th>
        <th>Username</th>
        <th>Highscore</th>
      </tr>
    </thead>
    <tbody>
      <% rows.forEach(function(row) { %>
        <tr>
          <td class="avatar-cell">
            <div class="avatar-container">
              <img src="/assets/emojis/<%= row.FILE_PATH%>" alt="Avatar" class="avatar-image">
              <img src="/assets/ranks/fourth_level.png" alt="Rank" class="rank-image">
            </div>
          </td>
          <td><a href="/profile/<%= row.USERNAME %>"><%= row.USERNAME %></a></td>
          <td><%= row.HIGHSCORE %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
