<!DOCTYPE html>
<html>
<head>
  <title>Profile of <%= username%></title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>

    /* Allgemeine Stile */
    body {
      margin: 0;
      background: url("/assets/backgrounds/florian-klauer-mk7D-4UCfmg-unsplash.jpg");
      background-size: cover;
      background-repeat: no-repeat;
      background-position: center;
      font-family: 'Montserrat', sans-serif;
      text-align: center;
      padding: 20px;
      display: marker;
      min-height: 100vh;
      width: auto;
      height: auto;
      background-position-x: center;
      background-position-y: center;
    }

    h1,
    h2 {
      text-align: center;
      color: white; /* Textfarbe in Weiß */
    }

    img {
      display: block;
      margin: 0 auto;
    }

    /* Profil-Container */
    .profile {
      position: relative;
    }

    .profile img {
      display: block;
      margin: 0 auto;
      position: relative;
      top: 50%;
      transform: translateY(-50%);
    }

    /* Tabelle */
    table {
      margin: 10px auto;
      max-width: 600px;
      width: 100%;
      border-collapse: collapse;
      background-color: rgba(128, 128, 128, 0.6);
      border-radius: 5px;
      color: white; /* Textfarbe in Weiß */
    }

    th,
    td {
      padding: 10px;
      text-align: center;
    }

    thead {
      background-color: rgba(128, 128, 128, 0.6);
    }

    tbody tr:nth-child(even) {
      background-color: rgba(128, 128, 128, 0.6);
    }

    /* Achievements-Tabelle */
    table:last-child {
      margin-top: 20px;
    }

    table:last-child th {
      text-align: left;
    }

    /* Media Queries für responsives Design */
    @media screen and (max-width: 600px) {
      h1 {
        font-size: 20px;
      }

      h2 {
        font-size: 16px;
      }

      table {
        max-width: 400px;
      }
    }

    @media screen and (max-width: 400px) {
      table {
        max-width: 300px;
      }
    }

  </style>
</head>
<body>
  <%- include('navbar') %>
  <div>
    <% rows.forEach(function(row) { %>
      <h1>Profile of <%= row.USERNAME%></h1>
    <% }) %>
    <div style="position: relative;" class="profile">
      <img src="/assets/emojis/<%= profile_avatar%>" width="50px" height="50px">
      <!-- <img src="/assets/ranks/fourth_level.png" width="72px" height="72px" style="position: absolute; top: 0; left: 0; z-index: 1;"> -->
    </div>
  </div>
  
  <table>
    <thead>
      <tr>
        <th>Username</th>
        <th>Highscore</th>
        <th>Wins</th>
        <th>Concurrent Wins</th>
        <th>Perfect Wins</th>
        <th>Loses</th>
      </tr>
    </thead>
    <tbody>
      <% rows.forEach(function(row) { %>
        <tr>
          <td><a href="/profile/<%= row.USERNAME %>"><%= row.USERNAME %></a></td>
          <td><%= row.HIGHSCORE %></td>
          <td><%= row.WINS %></td>
          <td><%= row.CONCURRENT_WINS %></td>
          <td><%= row.PERFECT_WINS %></td>
          <td><%= row.LOSES %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
  <table>
    <thead>
      <tr>
        <th>Achievments</th>
      </tr>
    </thead>
    <tbody>
      <% achievement.forEach(function(achievement) { %>
        <tr>
          <td><img src="/assets/achievements/<%= achievement.FILE_NAME %>"></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
